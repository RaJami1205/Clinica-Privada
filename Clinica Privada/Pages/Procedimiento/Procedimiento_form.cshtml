@page
@model Clinica_Privada.Pages.Procedimiento.Procedimiento_formModel
@{
}

<!-- Interfaz gráfica html del formulario de Procedimientos -->
<body>
    <section class="form-register">
        <h1>Procedimiento</h1>

        @if (Model.mensaje_exito.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_exito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (Model.mensaje_error.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.mensaje_error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" autocomplete="off">

            <input class="controls" type="text" name="id" id="id" placeholder="Ingrese el número de procedimiento" required value="@Model.Procedimiento.ID">

            <input class="controls" type="date" name="fecha" id="fecha" required value="@Model.Procedimiento.fecha_hora">

            <input class="controls" type="text" name="motivo" id="motivo" placeholder="Ingrese el motivo" required value="@Model.Procedimiento.motivo">

            <input class="controls" type="text" name="epicrisis" id="epicrisis" placeholder="Ingrese la epicrisis" required value="@Model.Procedimiento.epicrisis">

            <!-- Agregar el combobox para seleccionar la cedula del médico -->
            <select class="controls" name="cedula_medico" id="cedula_medico" required value="@Model.Procedimiento.cedula_medico">
                <option value="cedula_medico">Seleccione la cedula del medico</option>
                @foreach (var cedula in Model.listaCedulaMedico)
                {
                    <option value="@cedula">@cedula</option>
                }
            </select>

            <!-- Agregar el combobox para seleccionar la cedula del paciente -->
            <select class="controls" name="cedula_paciente" id="cedula_paciente" required value="@Model.Procedimiento.cedula_paciente">
                <option value="cedula_paciente">Seleccione la cedula del paciente</option>
                @foreach (var cedula in Model.listaCedulaPaciente)
                {
                    <option value="@cedula">@cedula</option>
                }
            </select>

            <button type="submit" asp-page-handler="" class="buttoms">Asignar Procedimiento</button>

        </form>
    </section>
</body>

<!-- Estilos CSS para la página -->
<style>
    /* Resetea márgenes y rellenos, y aplica box-sizing border-box para todos los elementos */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Estilo para el fondo del cuerpo de la página */
    body {
        background: linear-gradient(130deg, blue, skyblue);
    }

    /* Estilo para la sección del formulario de registro */
    .form-register {
        width: 400px; /* Ancho del formulario */
        background: #24303c; /* Color de fondo del formulario */
        padding: 30px; /* Relleno interno del formulario */
        margin: auto; /* Centra el formulario horizontalmente */
        margin-top: 100px; /* Margen superior para separación de la parte superior de la página */
        border-radius: 4px; /* Bordes redondeados del formulario */
        font-family: Calibri; /* Fuente del texto en el formulario */
        color: white; /* Color del texto en el formulario */
        box-shadow: 7px 13px 37px #000; /* Sombra del formulario para un efecto elevado */
    }

    /* Estilo para los campos de entrada del formulario */
    .controls {
        width: 100%; /* Ancho completo del campo de entrada */
        background: #24303c; /* Color de fondo del campo de entrada */
        padding: 10px; /* Relleno interno del campo de entrada */
        border-radius: 4px; /* Bordes redondeados del campo de entrada */
        margin-bottom: 16px; /* Margen inferior entre los campos de entrada */
        border: 1px solid #1f53c5; /* Borde del campo de entrada */
        font-family: Calibri; /* Fuente del texto en el campo de entrada */
        font-size: 18px; /* Tamaño de la fuente en el campo de entrada */
        color: white; /* Color del texto en el campo de entrada */
    }

    /* Estilo para el botón de enviar del formulario */
    .buttoms {
        width: 100%; /* Ancho completo del botón */
        background: #1f53c5; /* Color de fondo del botón */
        border: none; /* Sin borde para el botón */
        padding: 12px; /* Relleno interno del botón */
        color: white; /* Color del texto en el botón */
        margin: 16px 0; /* Margen superior e inferior para el botón */
        font-size: 18px; /* Tamaño de la fuente en el botón */
    }
</style>